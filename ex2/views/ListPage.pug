extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-indigo
            h1 Lista de Edições

    .w3-container.w3-white
        h6
                    
        .w3-container

            table.w3-table-all 
                tr
                    th ID 
                    th Ano 
                    th País Organizador 
                    th País Vencedor 

                each e in elist 
                    tr 
                        td
                            a(href="/" + e._id)=e._id
                        td= e.anoEdicao
                        td
                            a(href="/paises/" + e.organizacao)=e.organizacao 
                        td
                            a(href="/paises/" + e.vencedor)=e.vencedor 
